@model MvcAutoInjectScripts.Models.SimpleViewModel

@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<hr />

<form method="post">
    <div class="form-group">
        <label for="MyName">@Model.MyName</label>
        <input type="text" class="form-control" id="MyName" name="MyName">
    </div>
    <div class="form-group">
        <label for="MyThoughts">@Model.MyThoughts</label>
        <input type="text" class="form-control" id="MyThoughts" name="MyThoughts">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>